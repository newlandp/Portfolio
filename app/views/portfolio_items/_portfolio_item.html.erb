<h3><%= link_to portfolio_item.title, portfolio_item_show_path(portfolio_item.id) %></h3>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
<%= link_to "Edit", edit_portfolio_item_path(portfolio_item.id) %>
<%= link_to 'Delete Portfolio Item', portfolio_item_path(portfolio_item.id), method: :delete, data: { confirm: 'Are you sure?' } %>