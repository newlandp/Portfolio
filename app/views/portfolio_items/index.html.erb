<h1>Portfolio Items</h1>

<%= link_to "Create a new Item", new_portfolio_item_path %>

<% @portfolio_items.each do |item| %>
	<h3><%= link_to item.title, portfolio_item_path(item.id) %></h3>
	<p><%= item.subtitle %></p>
	<p><%= item.body %></p>
	<%= image_tag item.thumb_image unless item.thumb_image.nil? %>
	<%= link_to "Edit", edit_portfolio_item_path(item.id) %>
	<%= link_to 'Delete Portfolio Item', portfolio_item_path(item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>